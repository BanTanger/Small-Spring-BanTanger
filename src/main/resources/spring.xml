<?xml version="1.0" encoding="UTF-8" ?>
<beans>

    <!--配置三个事件监听器-->

    <!--监听刷新事件-->
    <bean class="com.bantanger.springframework.test.event.ContextRefreshedEventListener"/>

    <!--监听关闭事件-->
    <bean class="com.bantanger.springframework.test.event.ContextClosedEventListener"/>

    <!--监听自定义事件-->
    <bean class="com.bantanger.springframework.test.event.CustomEventListener"/>

</beans>